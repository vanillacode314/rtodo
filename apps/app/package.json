{
  "name": "app",
  "type": "module",
  "version": "0.0.50",
  "private": true,
  "scripts": {
    "test": "bun run src/utils/env.ts",
    "dev": "PORT=3002 bun run --watch src/index.ts",
    "build": "bun run src/utils/env.ts && bun build --minify-whitespace --minify-syntax --target bun --outdir dist --sourcemap ./src/index.ts",
    "start": "bun run src/index.ts",
    "format": "prettier --write src",
    "lint": "eslint --fix src"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@libsql/client": "^0.15.15",
    "@tanstack/solid-query-devtools": "^5.89.0",
    "arktype": "^2.1.22",
    "better-auth": "^1.3.13",
    "drizzle-arktype": "^0.1.3",
    "drizzle-orm": "^0.44.5",
    "elysia": "^1.4.6",
    "hlc": "workspace:*",
    "nanoid": "^5.1.5",
    "resend": "^6.1.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "typescript-eslint": "^8.44.0",
    "@dword-design/eslint-plugin-import-alias": "^6.0.3",
    "bun-types": "^1.2.22",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.36.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "prettier": "^3.6.2"
  },
  "module": "src/index.js"
}
